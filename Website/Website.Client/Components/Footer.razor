<footer>
    <div class="bg-black/60 text-white/40 flex flex-col gap-4 px-8 py-16 text-xs">
        <div class="flex flex-grow items-center justify-center">
            <Social/>
        </div>
        <div class="mx-auto flex w-full max-w-6xl items-center justify-center">
            @Copyright
        </div>
    </div>
</footer>

@code {
    string Copyright => GetCopyright();

    string GetCopyright()
    {
        return $"Copyright \u00a9 {GetYear()} - {GetCompany()} ({GetCompanyNumber()}). All rights reserved.";
    }

    string GetYear()
    {
        return 2024 < DateTime.UtcNow.Year ? $"2024 - {DateTime.UtcNow.Year}" : "2024";
    }

    string GetCompany()
    {
        return "Hancock Software Solutions Ltd";
    }

    string GetCompanyNumber()
    {
        return "15859930";
    }

}