<footer>
    <div class="bg-black/60 text-white/40 flex flex-col gap-4 px-8 py-16 text-xs">
        <div class="flex flex-grow items-center justify-center">
            <Social/>
        </div>
        <div class="mx-auto flex w-full max-w-6xl items-center justify-center">
            @Copyright
        </div>
    </div>
</footer>

@code {

    string Copyright => $"Copyright © {(DateTime.UtcNow.Year != Config.Year ? $"{Config.Year} - {DateTime.UtcNow.Year}" : Config.Year)} - {Config.CompanyName} ({Config.CompanyNumber}). All rights reserved.";

    [Inject]
    public Config Config { get; set; } = default!;

}